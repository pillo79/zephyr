menuconfig MODULES
	bool "Dynamic module loading"
	depends on !EXECUTE_XOR_WRITE
	help
	  Enable dynamic module loading

if MODULES

config MODULES_HEAP_SIZE
	int "Module loading heap memory size in kilobytes"
	default 8
	help
	  Memory size used to load dynamic modules

config MODULES_STACK_SIZE
	int "Module execution stack memory size in kilobytes"
	default 8
	help
	  Memory size used to load dynamic modules

config MODULES_INIT_PRIORITY
	int "Module init priority"
	default 50
	help
	  Modules subsystem init priority

config MODULES_SHELL
	bool "Modules shell commands"
    depends on SHELL
	help
	  Manage modules with shell commands

module = MODULES
module-str = modules
source "subsys/logging/Kconfig.template.log_config"

endif
